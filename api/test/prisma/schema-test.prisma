// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "postgresql://postgres:postgres@ip-192-168-238-149.ec2.internal:5432/avt_db?schema=public"
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  name        String
  password    String
  coin        String
  login       String    @unique
  revenues    Revenue[]
  tags        Tag[]
  sources     Source[]
  recoverCode String?   @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  deletedAt   DateTime?
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  revenues  Revenue[]
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model Source {
  id        String    @id @default(uuid())
  name      String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  revenues  Revenue[]
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model Revenue {
  id          String    @id @default(uuid())
  name        String
  coin        String
  value       Decimal
  payMethod   String
  date        DateTime
  description String
  typeRevenue String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  source      Source    @relation(fields: [sourceId], references: [id])
  sourceId    String
  tag         Tag       @relation(fields: [tagId], references: [id])
  tagId       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  deletedAt   DateTime?
}
